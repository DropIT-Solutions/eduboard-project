# Production Environment Variables
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://eduboard.com

# Database - Production
DATABASE_URL="sqlserver://eduboard-db-prod.database.windows.net:1433;database=eduboard_production;user=eduboard_admin;password=${PROD_DB_PASSWORD};encrypt=true"

# JWT - Production
JWT_SECRET=${PROD_JWT_SECRET}
JWT_EXPIRATION=3600

# Azure AD B2C - Production
AZURE_AD_B2C_TENANT_NAME=eduboardb2c
AZURE_AD_B2C_CLIENT_ID=${PROD_AZURE_CLIENT_ID}
AZURE_AD_B2C_CLIENT_SECRET=${PROD_AZURE_CLIENT_SECRET}

# Azure Storage - Production
AZURE_STORAGE_CONNECTION_STRING=${PROD_AZURE_STORAGE_CONNECTION_STRING}
AZURE_STORAGE_CONTAINER_NAME=uploads