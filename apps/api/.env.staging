# Staging Environment Variables
NODE_ENV=staging
PORT=3001
FRONTEND_URL=https://eduboard-staging.vercel.app

# Database - Staging
DATABASE_URL="sqlserver://eduboard-db-staging.database.windows.net:1433;database=eduboard_staging;user=eduboard_admin;password=${STAGING_DB_PASSWORD};encrypt=true"

# JWT - Staging
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRATION=3600

# Azure AD B2C - Staging
AZURE_AD_B2C_TENANT_NAME=eduboardb2c-staging
AZURE_AD_B2C_CLIENT_ID=${STAGING_AZURE_CLIENT_ID}
AZURE_AD_B2C_CLIENT_SECRET=${STAGING_AZURE_CLIENT_SECRET}

# Azure Storage - Staging
AZURE_STORAGE_CONNECTION_STRING=${STAGING_AZURE_STORAGE_CONNECTION_STRING}
AZURE_STORAGE_CONTAINER_NAME=uploads-staging